using UnityEngine;

public class ToolUsage : MonoBehaviour
{
    Rigidbody2D rb;
    SpriteRenderer spr;
    Animator anim;

    bool oilcan;
    bool wrench;
    bool rag;
    bool hammer;

    public GameObject OilCan;
    // Start is called once before the first execution of Update after the MonoBehaviour is created
    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
        anim = GetComponent<Animator>();
        spr = GetComponent<SpriteRenderer>();
    }

    // Update is called once per frame
    void Update()
    {
        
    }

    private void HasOilCan(Collider2D collision)
    {
        if(collision.CompareTag("OilCan") && Input.GetKeyDown(KeyCode.E))
        {
            if(OilCan.activeInHierarchy == true)
            {
                oilcan = true;
                OilCan.SetActive(false);
            }
                
            if((OilCan.activeInHierarchy == false) && Input.GetKeyDown(KeyCode.E))
            {
                oilcan = false;
                OilCan.SetActive(true);
            }

        }
    }

}


using UnityEngine;

public class ToolUsage : MonoBehaviour
{
    private Rigidbody2D rb;
    private SpriteRenderer spr;
    private Animator anim;

    public GameObject OilCan; // Reference to the Oil Can object
    private bool oilcan;      // Indicates if the player is holding the Oil Can
    private bool nearOilCan;  // Indicates if the player is near the Oil Can

    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
        anim = GetComponent<Animator>();
        spr = GetComponent<SpriteRenderer>();
    }

    void Update()
    {
        // Check for interaction key press
        if (Input.GetKeyDown(KeyCode.E))
        {
            if (nearOilCan) // If near the oil can
            {
                if (!oilcan) // Pick up the oil can
                {
                    oilcan = true;
                    OilCan.SetActive(false); // Make it invisible
                }
                else // Drop the oil can
                {
                    oilcan = false;
                    OilCan.SetActive(true); // Make it visible
                }
            }
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.CompareTag("OilCan"))
        {
            nearOilCan = true;
        }
    }

    private void OnTriggerExit2D(Collider2D collision)
    {
        if (collision.CompareTag("OilCan"))
        {
            nearOilCan = false;
        }
    }
}
