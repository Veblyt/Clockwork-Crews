using System;
using UnityEditor;
using UnityEngine;

public class PlayerMovement : MonoBehaviour
{

    Rigidbody2D rb;
    float moveForce = 5;
    float jumpForce = 10;
    bool grounded;
    Animator anim;
    SpriteRenderer spr;
    // Start is called once before the first execution of Update after the MonoBehaviour is created
    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
        anim = GetComponent<Animator>();
        spr = GetComponent<SpriteRenderer>();
    }

    // Update is called once per frame
    void Update()
    {
        /* Could also implement sideways movement so that
         if a left or right key is pressed the character turns
          that way respectively and so the character would then
           move in the direction they're facing. */

        //Sideways Movement
        if(grounded){
            rb.AddForce(transform.right * moveForce * Input.GetAxis("Horizontal"), ForceMode2D.Force);
            if(rb.linearVelocityX < -.5f || rb.linearVelocityX > .5f){
                anim.SetBool("IsWalking",true);
            }
            else{
                anim.SetBool("IsWalking",false);
            }
    
            if(rb.linearVelocityX > 0.1f) {
                spr.flipX = true;
            }   
            else{
                spr.flipX = false;
            }
        }

        //Jumping
        if(grounded){
            if(Input.GetKeyDown(KeyCode.UpArrow) || Input.GetKeyDown(KeyCode.Space) || Input.GetKeyDown(KeyCode.W))
            {
                rb.AddForce(transform.up * jumpForce, ForceMode2D.Impulse);
                anim.SetTrigger("Jump");
            }
        }

        //Attack (Will probably make this the tool interact)
        if(Input.GetKeyDown(KeyCode.E)){
            anim.SetTrigger("Attack");
        }
    }
    
        private void OnCollisionEnter(Collision2D other)
        {
            if(other.gameObject.CompareTag("Ground"))
            {
                Vector3 normal = other.GetContact(0).normal;
                if(normal == Vector3.up)
                    {
                    grounded = true;
                    }
            }
        }
        
        private void OnCollisionExit(Collision2D other)
        {
            if(other.gameObject.CompareTag("Ground"))
            {
                grounded = false;
            }
        }
}
